<Page x:Class="Round_Minecraft_Launcher.Pages.Main_SubPages.Setting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Round_Minecraft_Launcher.Pages.Main_SubPages"
      mc:Ignorable="d"
      xmlns:muxc="http://schemas.inkore.net/lib/ui/wpf/modern"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Setting">

    <Grid>
        <muxc:NavigationView SelectionChanged="NavigationView_SelectionChanged" Name="Setting_Tab" PaneDisplayMode="Top" IsBackButtonVisible="Collapsed">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem Content="游戏设置" Name="GameSetting" />
                <muxc:NavigationViewItem Content="账户设置" Name="UserSetting" />
                <muxc:NavigationViewItem Content="个性化设置" Name="PersonalizeSetting" />
            </muxc:NavigationView.MenuItems>
            <Frame Name="Setting_Frame"/>
        </muxc:NavigationView>
    </Grid>
</Page>
